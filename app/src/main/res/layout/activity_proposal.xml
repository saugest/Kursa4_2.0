<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#27374D">

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#9DB2BF"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/buttonAvatar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatars" />

        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="match_parent"
            android:background="#9DB2BF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="145dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="15dp"
                android:text="TextView"
                android:textColor="#526D82" />

            <TextView
                android:id="@+id/roleLape"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Заказчик, исполнитель"
                android:textColor="#526D82" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:background="#DDE6ED"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/buttonLapeActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#00FFFFFF"
                    app:srcCompat="@drawable/channel" />

                <TextView
                    android:id="@+id/offerTitle"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="#526D82" />
            </TableRow>

            <EditText
                android:id="@+id/textOffer"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:layout_marginTop="90dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:textColor="#000000" />

            <Button
                android:id="@+id/buttonSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="245dp"
                android:background="#526D82"
                android:text="Отправить"
                android:textColorHighlight="#D30808"
                android:textColorLink="#C11E1E"
                app:backgroundTint="@null" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/buttonLapeActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="64dp"
        android:background="#526D82"
        android:text="На главную страницу"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9" />

</androidx.constraintlayout.widget.ConstraintLayout>