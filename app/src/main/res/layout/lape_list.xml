<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="#00FFFFFF">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9DB2BF"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DDE6ED">


            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="360dp"
                app:cardCornerRadius="10dp">

                <ImageButton
                    android:id="@+id/imageButtonAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:layout_marginLeft="3dp"
                    android:background="#9DB2BF"
                    android:radius="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/channel" />
            </androidx.cardview.widget.CardView>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-355dp">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/applicationTitle"
                        android:layout_width="189dp"
                        android:layout_height="wrap_content"
                        android:background="#DDE6ED"
                        android:text="Название"
                        android:textColor="#27374D" />

                    <TextView
                        android:id="@+id/applicationRating"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:background="#DDE6ED"
                        android:text="4.0"
                        android:textColor="#27374D" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="91dp"
                        android:layout_height="match_parent"
                        android:background="#9DB2BF"
                        android:text="Просмотры:"
                        android:textAlignment="center"
                        android:textColor="#27374D" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#DDE6ED"
                            android:text="Подписчики:"
                            android:textColor="#27374D" />

                        <TextView
                            android:id="@+id/applicationSubscribes"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#DDE6ED"
                            android:text="11000"
                            android:textColor="#27374D" />
                    </TableRow>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/applicationViews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#9DB2BF"
                        android:text="11000"
                        android:textAlignment="center"
                        android:textColor="#27374D" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="190dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:background="#DDE6ED"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="#27374D" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="128dp"
                            android:layout_height="wrap_content"
                            android:background="#DDE6ED"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="#27374D" />
                    </TableRow>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#9DB2BF"
                        android:text="ER:"
                        android:textAlignment="center"
                        android:textColor="#27374D" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="194dp"
                        android:layout_height="wrap_content"
                        android:background="#DDE6ED"
                        android:text="180000"
                        android:textAlignment="center"
                        android:textColor="#27374D" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/applicationEr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#9DB2BF"
                        android:text="24,07%"
                        android:textAlignment="center"
                        android:textColor="#27374D" />
                </TableRow>

            </TableLayout>
        </TableRow>

    </LinearLayout>
</androidx.cardview.widget.CardView>